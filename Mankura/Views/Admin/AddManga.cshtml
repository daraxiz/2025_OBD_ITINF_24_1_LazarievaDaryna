@model AddMangaViewModel

<div class="profile-manga-content">
    <h2 class="section-title">Add manga</h2>

    <form asp-action="AddManga"
          method="post"
          enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <div class="settings-field">
            <label>Publisher</label>
            <input asp-for="PublisherName" type="text" required />
        </div>

        <div class="settings-field">
            <label>Name</label>
            <input asp-for="NameManga" type="text" required />
            <span class="field-error" asp-validation-for="NameManga"></span>
        </div>

        <div class="settings-field">
            <label>Description</label>
            <textarea asp-for="Description"></textarea>
        </div>

        <div class="settings-field">
            <label>Cover</label>
            <input asp-for="CoverFile" type="file" accept="image/*" />
        </div>

        <div class="settings-field">
            <label>Status</label>
            <select asp-for="StatusId"
                    asp-items="Model.Statuses">
            </select>
        </div>

        <div class="settings-field">
            <label>Type</label>
            <select asp-for="TypeId"
                    asp-items="Model.Types">
            </select>
        </div>

        <div class="settings-field">
            <label>Author(s)</label>
            <input asp-for="Authors"
                   placeholder="e.g. Eiichiro Oda" />
        </div>

        <div class="settings-field">
            <label>Artist(s)</label>
            <input asp-for="Artists"
                   placeholder="e.g. Eiichiro Oda" />
        </div>

        <div class="settings-field">
            <label>Release year</label>
            <input asp-for="ReleaseYear" type="number" min="1900" max="2100" required />
        </div>

        <div class="settings-field">
            <label>Genres</label>

            <select asp-for="GenreIds"
                    asp-items="Model.Genres"
                    multiple
                    class="multi-select">
            </select>

            <small>Select one or more genres (Ctrl+Click)</small>
        </div>

        <button type="submit" class="auth-submit-btn">
            Add manga
        </button>

    </form>
</div>
