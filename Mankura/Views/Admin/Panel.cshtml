@{
    ViewData["Title"] = "Admin panel";
}

<div class="profile-manga-content">
    <h2 class="section-title">Admin dashboard</h2>

    <div class="admin-stats">
        <div class="admin-stat">
            <span class="admin-stat-title">Users</span>
            <span class="admin-stat-value">@ViewBag.UsersCount</span>
        </div>

        <div class="admin-stat">
            <span class="admin-stat-title">Manga</span>
            <span class="admin-stat-value">@ViewBag.MangaCount</span>
        </div>

        <div class="admin-stat">
            <span class="admin-stat-title">Comments</span>
            <span class="admin-stat-value">@ViewBag.CommentsCount</span>
        </div>
    </div>

    <div class="admin-actions">

        <a href="/Admin/AddManga" class="admin-item">
            <img src="/icons/add.svg" />
            <span>Add manga</span>
        </a>

        <a asp-controller="Admin"
           asp-action="SelectMangaToEdit"
           class="admin-item">
            <img src="/icons/edit.svg" />
            <span>Edit manga</span>
        </a>

        <a href="/Admin/AddChapter" class="admin-item">
            <img src="/icons/upload.svg" />
            <span>Add chapter</span>
        </a>

        <a href="/Admin/Users" class="admin-item">
            <img src="/icons/users.svg" />
            <span>Manage users</span>
        </a>
        <form asp-action="DeleteManga"
              method="post"
              onsubmit="return confirm('Delete manga permanently?')">

            @Html.AntiForgeryToken()

            <select name="id" required>
                <option value="">Select manga</option>
                @foreach (var m in ViewBag.Mangas)
                {
                    <option value="@m.Id">@m.Name</option>
                }
            </select>

            <button class="admin-item">
                <img src="/icons/trash.svg" />
                <span>Delete manga</span>
            </button>
        </form>

    </div>
</div>
